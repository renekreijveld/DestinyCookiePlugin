                </field>
                <field name="popupfont" type="text" label="DESTINY_COOKIE_PLUGIN_FONT_OWN" description="DESTINY_COOKIE_PLUGIN_FONT_OWN_DESC" filter="safehtml" translate_default="true" class="span4" showon="popupfontfamily:other"/>
