                <field name="popup_buttonall_textcolor" type="color" default="#ffffff" label="DESTINY_COOKIE_PLUGIN_POPUP_BUTTONALL_TEXTCOLOR" />
            </fieldset>
            <fieldset name="functional" label="DESTINY_COOKIE_PLUGIN_FUNCTIONAL_SCRIPTS">
